<%- include("partials/header"); %>
<h2>Nejnovější příspěvky</h2>
<% if (typeof(previous) === "undefined") { %>
<p class="text-muted">
  Vítejte na mém blogu, kde píšu o své cestě webového vývojáře.
</p>
<% } %>
<% posts.map((post) => { %>
<h3><%= post.title %></h3>
<p class="text-muted"><%= post.dateHumanized %></p>
<p><%= post.intro %></p>
<p><a href="/posts/<%= post.id %>/<%= post.kebab %>">Číst více</a></p>
<hr />
<% }); %>
<div class="d-flex justify-content-between mb-3">
  <div>
    <% if (typeof(previous) !== "undefined") { %>
    <a href="/posts?page=<%= previous %>" class="btn btn-dark" role="button" aria-pressed="true">Previous</a>
    <% } %>
  </div>
  <div>
    <% if (typeof(next) !== "undefined") { %>
    <a href="/posts?page=<%= next %>" class="btn btn-dark" role="button" aria-pressed="true">Next</a>
    <% } %>
  </div>
</div>

<%- include("partials/footer"); %>